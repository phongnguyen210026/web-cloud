{% extends 'base.html.twig' %}
{% block title %}Search | ATN{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/style.css') }}" />
    <link rel="stylesheet" href="{{ asset('css/search.css') }}" />
{% endblock %}
{% block body %}
{% include 'header.html.twig' %}
<section class="mb-5">
<style>
    .empty-result span{
        font-size: 50px;
        font-weight: 900;
        text-align: center;
    }
    .empty-result {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100px;
    }
    footer {
        margin-top: 2000px;
    }
    .product-card-search:nth-child(4n+1) {
    margin-left: 88px;
    }
</style>
            <div class="search-result">
                <span class="content-search-result">Search for: "{{ search_content }}"</span>
            </div>
        </section>
        {% if result is empty %}
            <div class="empty-result"><span>Not found</span></div>
        {% else %}
            <section class="search-section">
            <div class="filter">
                <span class="filter-title">Filter by</span>
                <h3>Price</h3>
                <div class="radio-column">
                    <input type="radio" name="price" id="price-low">
                    <label for="price">$0 - $10</label>
                </div>
                <div class="radio-column">
                  <input type="radio" name="price" id="price-low">
                  <label for="price">$10 - $30</label>
                </div>
                <div class="radio-column">
                  <input type="radio" name="price" id="price-medium">
                  <label for="price">$30 - $60</label>
                </div>
                <div class="radio-column">
                  <input type="radio" name="price" id="price-high">
                  <label for="price">$60 - $100</label>
                </div>
            </div>
            <div class="product-container-search">
                <div class="row">
                    {% for r in result %}
                        <div class="product-card-search col-3">
                        <div class="product-image">
                          <img src="{{ asset('uploads/' ~ r.image) }}" alt="Product Image">
                        </div>
                        <div class="product-details">
                          <h3 class="product-name">{{ r.name }}</h3>
                          <p class="product-price">{{ r.price }}</p>
                          <a href="#" class="add-to-cart-btn">Add to Cart</a>
                          <div class="overlay">
                            <a href="#" class="view-details-btn">View Details</a>
                          </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>          
        </section>
        {% endif %}
{% include 'footer.html.twig' %}
{% endblock %}